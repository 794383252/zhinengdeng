<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignBaseline="@+id/register_Name"
            android:id="@+id/Name_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓           名"
            android:textSize="24dp" />

        <TextView
            android:layout_alignBaseline="@+id/register_Name"
            android:id="@+id/Name_Point"
            android:layout_toRightOf="@id/Name_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=":" />

        <EditText
            android:layout_toRightOf="@id/Name_Point"
            android:id="@+id/register_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/register_Name_Text"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/register_Name"
            android:layout_alignLeft="@id/register_Name"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignBaseline="@+id/register_Password"
            android:id="@+id/Password_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密           码"
            android:textSize="24dp" />

        <TextView
            android:layout_alignBaseline="@+id/register_Password"
            android:id="@+id/Password_Point"
            android:layout_toRightOf="@id/Password_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=":" />

        <EditText
            android:layout_toRightOf="@id/Password_Point"
            android:id="@+id/register_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/register_Password_Text"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/register_Password"
            android:layout_alignLeft="@id/register_Password"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignBaseline="@+id/register_Confirm_Password"
            android:id="@+id/Confirm_Password_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确 认  密 码"
            android:textSize="24dp" />

        <TextView
            android:layout_alignBaseline="@+id/register_Confirm_Password"
            android:id="@+id/Confirm_Password_Point"
            android:layout_toRightOf="@id/Confirm_Password_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=":" />

        <EditText
            android:layout_toRightOf="@id/Confirm_Password_Point"
            android:id="@+id/register_Confirm_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/register_Confirm_Password_Text"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/register_Confirm_Password"
            android:layout_alignLeft="@id/register_Confirm_Password"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignBaseline="@+id/register_Email"
            android:id="@+id/Email_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电 子  邮 箱"
            android:textSize="24dp" />

        <TextView
            android:layout_alignBaseline="@+id/register_Email"
            android:id="@+id/Email_Point"
            android:layout_toRightOf="@id/Email_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=":" />

        <EditText
            android:layout_toRightOf="@id/Email_Point"
            android:id="@+id/register_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/register_Email_Text"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/register_Email"
            android:layout_alignLeft="@id/register_Email"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignBaseline="@+id/register_Verification_Code"
            android:id="@+id/Verification_Code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱验证码 "
            android:textSize="24dp" />

        <TextView
            android:layout_alignBaseline="@+id/register_Verification_Code"
            android:id="@+id/Email_point"
            android:layout_toRightOf="@id/Verification_Code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=":" />

        <EditText
            android:layout_toRightOf="@id/Email_point"
            android:id="@+id/register_Verification_Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/register_Verification_Code_Button"
            android:textSize="8dp"
            android:text="获取验证码 "
            android:layout_alignLeft="@id/register_Verification_Code"
            android:layout_below="@id/register_Verification_Code"
            android:layout_width="70dp"
            android:layout_height="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/register_Button_register"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/register_Button_Back"
            android:layout_marginLeft="100dp"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
